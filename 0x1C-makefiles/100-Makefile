CC=gcc
SRC=main.c school.c
OBJ=$(SRC:.c=.o)
NAME=school
CFLAGS=-Wall -Werror -Wextra -pedantic
.PHONY: clean oclean fclean re all

COMPILER_FLAGS = $(CFLAGS)

all: $(OBJ) m.h
        $(CC) $(COMPILER_FLAGS) $(OBJ) -o $(NAME)

clean:
	$(RM) *~ $(NAME)

oclean:
	$(RM) $(OBJ)

fclean:clean oclean
re:oclean all
